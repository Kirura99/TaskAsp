@model IEnumerable<TaskAsp.Models.Product>

<h2>Products</h2>
<p><a asp-action="Create" class="btn btn-primary">Create Product</a></p>

<table class="table">
    <thead><tr><th>Code</th><th>Title</th><th>Price</th><th></th></tr></thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Code</td>
                <td>@p.Title</td>
                <td>@p.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@p.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
