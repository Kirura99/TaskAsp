@model IEnumerable<ClientList>

<h2>Clients</h2>
<p><a asp-action="Create" class="btn btn-primary">Create Client</a></p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Birthdate</th>
            <th>Orders</th>
            <th>Avg Amount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Name</td>
                <td><a href="mailto:@c.Email">@c.Email</a></td>
                <td>@c.Birthdate.ToString("yyyy-MM-dd")</td>
                <td>@c.OrdersCount</td>
                <td>@(c.AvgOrderAmount?.ToString("0.00") ?? "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@c.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@c.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
